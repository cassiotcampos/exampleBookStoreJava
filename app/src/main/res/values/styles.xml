<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textBase" parent="WrapWrap">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_base</item>
    </style>

    <style name="textLabel" parent="textBase">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textSize">@dimen/text_label_small_base</item>
    </style>

    <style name="textDescription" parent="textBase">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textLabelBookDetail" parent="textLabel">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">-4dp</item>
    </style>

    <style name="containerBookInfo">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linkDescription" parent="textDescription">
        <item name="android:textColor">#ff0099cc</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="text_view_row_book">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:alpha">.9</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.05</item>
        <item name="android:lineSpacingMultiplier">.75</item>
        <item name="android:maxLines">4</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_item_list_size</item>
    </style>
</resources>